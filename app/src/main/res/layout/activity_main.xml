<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water Forecast"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/calibrib"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_15sdp"/>

            <ImageView
                android:id="@+id/menu"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/menu"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_20sdp"/>


            <ImageView
                android:id="@+id/water2"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/water1"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/name"
                android:layout_marginTop="@dimen/_35sdp"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/water1"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/water2"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/name"
                android:layout_marginTop="@dimen/_35sdp"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/water3"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/water3"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/name"
                android:layout_marginTop="@dimen/_35sdp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/_50ssp"
                android:fontFamily="@font/calibrib"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/water1"
                android:layout_marginTop="@dimen/_15sdp"/>

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bahawalpur"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/calibri"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/degree"
                android:layout_marginTop="-15dp"/>

            <LinearLayout
                android:id="@+id/DayPlate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/degree"
                android:layout_marginTop="@dimen/_30sdp">

                <ImageView
                    android:id="@+id/sun"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:src="@drawable/sun"/>


                <TextView
                    android:id="@+id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saturday"
                    android:textColor="@color/black"
                    android:fontFamily="@font/calibrib"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:textSize="@dimen/_9ssp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/suggestions"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_110sdp"
                android:layout_below="@id/DayPlate"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_centerHorizontal="true">

                <androidx.cardview.widget.CardView
                    android:id="@+id/sanitizer"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#0288d1"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:elevation="@dimen/_10sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:src="@drawable/element1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:fontFamily="@font/calibrib"
                            android:text="Use\nSanitizer"
                            android:textAlignment="center"
                            android:textColor="@color/white"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/botel"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#0288d1"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:elevation="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:src="@drawable/element2"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_17sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:fontFamily="@font/calibrib"
                            android:text="Filtered\nWater"
                            android:textAlignment="center"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/boil"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#0288d1"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:elevation="@dimen/_10sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_33sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:src="@drawable/element3"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_19sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:fontFamily="@font/calibrib"
                            android:text="Boil\nWater"
                            android:textAlignment="center"
                            android:textColor="@color/white"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:id="@+id/Model2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/suggestions"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:fontFamily="@font/calibrib"
                android:text="Calculate Water Quality"
                android:textColor="@color/black"
                android:textSize="@dimen/_22ssp" />

            <TextView
                android:id="@+id/ph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pH"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_below="@id/Model2"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/calibrib"
                android:textSize="@dimen/_13ssp"/>

            <EditText
                android:id="@+id/pH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="pH"
                android:textAlignment="textEnd"
                android:background="@drawable/empty"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_23sdp"
                android:layout_below="@id/Model2"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="#8B8B8B"
                android:fontFamily="@font/calibrib"
                android:textSize="@dimen/_13ssp"/>

            <TextView
                android:id="@+id/hardn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hardness"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_below="@id/ph"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/calibrib"
                android:textSize="@dimen/_13ssp"/>

            <EditText
                android:id="@+id/Hardness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pH"
                android:textAlignment="textEnd"
                android:background="@drawable/empty"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_23sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/calibrib"
                android:hint="Hardness"
                android:textColor="#8B8B8B"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/solid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Solids"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_below="@id/hardn"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/calibrib"
                android:textSize="@dimen/_13ssp"/>

            <EditText
                android:id="@+id/Solids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Solids"
                android:textAlignment="textEnd"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_23sdp"
                android:layout_below="@id/Hardness"
                android:background="@drawable/empty"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="#8B8B8B"
                android:fontFamily="@font/calibrib"
                android:textSize="@dimen/_13ssp"/>

            <TextView
                android:id="@+id/conduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conductivity"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_below="@id/solid"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/calibrib"
                android:textSize="@dimen/_13ssp"/>

            <EditText
                android:id="@+id/Conductivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Conductivity"
                android:textAlignment="textEnd"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_23sdp"
                android:layout_below="@id/Solids"
                android:background="@drawable/empty"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="#8B8B8B"
                android:fontFamily="@font/calibrib"
                android:textSize="@dimen/_13ssp"/>

            <TextView
                android:id="@+id/turbi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turbidity"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_below="@id/conduct"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/calibrib"
                android:textSize="@dimen/_13ssp"/>

            <EditText
                android:id="@+id/Turbidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Turbidity"
                android:textAlignment="textEnd"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_23sdp"
                android:layout_below="@id/Conductivity"
                android:background="@drawable/empty"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="#8B8B8B"
                android:fontFamily="@font/calibrib"
                android:textSize="@dimen/_13ssp"/>

            <TextView
                android:id="@+id/Chlora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chloramines"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_below="@id/turbi"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/calibrib"
                android:textSize="@dimen/_13ssp"/>

            <EditText
                android:id="@+id/Chloramines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Turbidity"
                android:background="@drawable/empty"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_23sdp"
                android:fontFamily="@font/calibrib"
                android:hint="Chloramines"
                android:textAlignment="textEnd"
                android:textColor="#8B8B8B"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/sulf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sulfate"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_below="@id/Chlora"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/calibrib"
                android:textSize="@dimen/_13ssp"/>

            <EditText
                android:id="@+id/Sulfate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Chloramines"
                android:background="@drawable/empty"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_23sdp"
                android:fontFamily="@font/calibrib"
                android:hint="Sulfate"
                android:textAlignment="textEnd"
                android:textColor="#8B8B8B"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/organic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organic Carbon"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_below="@id/sulf"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/calibrib"
                android:textSize="@dimen/_13ssp"/>

            <EditText
                android:id="@+id/organic_carbon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Sulfate"
                android:background="@drawable/empty"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_23sdp"
                android:fontFamily="@font/calibrib"
                android:hint="Organic Carbon"
                android:textAlignment="textEnd"
                android:textColor="#8B8B8B"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/Trihalo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trihalomethanes"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_below="@id/organic"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/calibrib"
                android:textSize="@dimen/_13ssp"/>

            <EditText
                android:id="@+id/Trihalomethanes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/organic_carbon"
                android:background="@drawable/empty"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_23sdp"
                android:fontFamily="@font/calibrib"
                android:hint="Trihalomethanes"
                android:textAlignment="textEnd"
                android:textColor="#8B8B8B"
                android:textSize="@dimen/_13ssp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/calculate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_centerInParent="true"
                android:layout_below="@id/Trihalo"
                app:cardBackgroundColor="#0288d1"
                app:cardCornerRadius="@dimen/_10sdp"
                android:elevation="@dimen/_10sdp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_7ssp"
                        android:text="Calculate"
                        android:fontFamily="@font/calibrib"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            
            <TextView
                android:id="@+id/results"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibrib"
                android:textColor="@color/black"
                android:layout_below="@id/calculate"
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_25ssp"
                android:layout_centerHorizontal="true"/>
            
            <ImageView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_below="@id/results"
                android:layout_centerHorizontal="true"
                android:background="@drawable/mawa_rights"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>